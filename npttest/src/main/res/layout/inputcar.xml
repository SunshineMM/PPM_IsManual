<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#EEE"
        android:layout_height="match_parent">
        <!--顶部信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/inputcar_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_title_back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="手动出入场"
                android:layout_marginRight="40dp"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/fontcolor"
                    android:gravity="center|left"
                    android:text="请输入车牌号:"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/inputcar_camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_open_camera"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>


            <!--输入车牌号-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/inputcar_lin_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/inputcar_inputbox1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp" />

                <EditText
                    android:id="@+id/inputcar_inputbox2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:background="@drawable/keyboard_bg_white"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/inputcar_inputbox3"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/inputcar_inputbox4"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/inputcar_inputbox5"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:background="@drawable/keyboard_bg_white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/inputcar_inputbox6"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/inputcar_inputbox7"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
                <EditText
                    android:id="@+id/inputcar_inputbox8"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_bg_white"
                    android:focusable="false"
                    android:layout_height="45dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#ccc">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="是否开启输入新能源车牌"
                android:textColor="@color/fontcolor"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></View>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/input_sbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"></View>

        <ImageView
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:id="@+id/inputcar_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        <LinearLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--选择车型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_bg"
                android:orientation="horizontal">

                <!--摩托车-->
                <LinearLayout
                    android:id="@+id/inputcar_moto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inputcar_motoimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_moto_bike" />

                    <TextView
                        android:id="@+id/inputcar_mototext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="摩托车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--小型车-->
                <LinearLayout
                    android:id="@+id/inputcar_smallcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inputcar_smallcarimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_small_car" />

                    <TextView
                        android:id="@+id/inputcar_smallcartext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小型车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--中型车-->
                <LinearLayout
                    android:id="@+id/inputcar_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inputcar_middleimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mid_truck" />

                    <TextView
                        android:id="@+id/inputcar_middletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中型车"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--大型车-->
                <LinearLayout
                    android:id="@+id/inputcar_bigcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inputcar_bigcarimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_big_truck" />

                    <TextView
                        android:id="@+id/inputcar_bigcartextt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大型车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"></View>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inputcarinto_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_style"
            android:text="入  场"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/inputcarout_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ripple_button_style"
            android:text="出  场"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:background="#F0EFF4"
            android:keyBackground="@android:color/white"
            android:keyTextColor="#5E5E5E"
            android:shadowColor="#ffffff"
            android:shadowRadius="0.0"
            android:keyPreviewLayout="@layout/key_preview_layout"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>