<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#EEE"
        android:layout_height="match_parent">

        <!--顶部信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appearance_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_title_back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="出场执行"
                android:layout_marginRight="40dp"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--车牌号图片-->
            <ImageView
                android:id="@+id/appearance_img"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="请确认车牌号:"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left|bottom"
                    android:textSize="16sp"/>
                <!--输入车牌号-->
                <LinearLayout
                    android:id="@+id/ll_license_input_boxes_content_out"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">
                    <EditText
                        android:id="@+id/et_car_license_inputbox1_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:focusable="false"
                        android:background="@drawable/keyboard_bg_white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox2_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox3_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox4_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox5_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox6_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:background="@drawable/keyboard_bg_white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox7_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/et_car_license_inputbox8_out"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/keyboard_bg_white"
                        android:focusable="false"
                        android:layout_height="45dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#CCCCCC"></View>

        <!--选择车型-->
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <!--选择车型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_bg"
                android:orientation="horizontal">

                <!--摩托车-->
                <LinearLayout
                    android:id="@+id/appearance_moto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/appearance_motoimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_moto_bike" />

                    <TextView
                        android:id="@+id/appearance_mototext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="摩托车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--小型车-->
                <LinearLayout
                    android:id="@+id/appearance_smallcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/appearance_smallcarimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_small_car" />

                    <TextView
                        android:id="@+id/appearance_smallcartext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小型车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--中型车-->
                <LinearLayout
                    android:id="@+id/appearance_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/appearance_middleimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mid_truck" />

                    <TextView
                        android:id="@+id/appearance_middletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中型车"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"></View>
                <!--大型车-->
                <LinearLayout
                    android:id="@+id/appearance_bigcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/appearance_bigcarimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/ic_big_truck" />

                    <TextView
                        android:id="@+id/appearance_bigcartext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大型车"
                        android:textColor="@color/fontcolor"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/appearance_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_error"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4C20"
                android:textSize="@dimen/sp_14"
                android:text="未在场内找到该车辆信息"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_height="60dp">

            <Button
                android:id="@+id/appearance_Cancel_admission"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ripple_button_style"
                android:text="取消出场"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/appearance_Confirm_admission"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ripple_button_style"
                android:text="确定出场"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:background="#F0EFF4"
            android:keyBackground="@android:color/white"
            android:keyTextColor="#5E5E5E"
            android:shadowColor="#ffffff"
            android:shadowRadius="0.0"
            android:keyTextSize="18sp"
            android:keyPreviewLayout="@layout/key_preview_layout"
            android:labelTextSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>